@model IEnumerable<EBook.Models.Models.CoverType>

    @{
        ViewData["Title"] = "Index";
    }


   <div class="container p-3">
       <div class="row pt-4">
           <div class="col-6">
               <h2 class="text-primary">Cover Type List</h2>
           </div>
           <div class="col-6 text-end">
            <a asp-controller="CoverType" asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle-fill"></i>&nbsp; Create New Cover Type
               </a>
           </div>
       </div>
   </div>

    <table class="table table-bordered table- striped" style="width:100%">
        <thead>
            <tr>
                <th>
                Cover Type Name
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var cov in Model)
            {
            <tr>
                <td width="50%">
                    @cov.Name
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="CoverType" asp-action="Edit" asp-route-id="@cov.Id" class="btn btn-warning mx-2">
                            <i class="bi bi-pencil-fill"> &nbsp; Edit</i>
                        </a>
                        <a asp-controller="CoverType" asp-action="Delete" asp-route-id="@cov.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash"> &nbsp; Delete</i>
                        </a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>